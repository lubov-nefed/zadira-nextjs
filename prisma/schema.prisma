generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Product {
  id           String @id @unique @default(cuid())
  name         String
  brand        String
  img          String
  oldPrice     String
  currentPrice String
  likes        Int
  availability String
  carts        Cart[]
}

model User {
  id       String   @id @unique @default(cuid())
  name     String   @unique
  role     String
  password String   @unique
  cart     Cart?
}

model Cart {
  id       String   @id @unique @default(cuid())
  user     User @relation(fields: [userID], references: [id])
  userID   String @unique
  content  Product[]
}
